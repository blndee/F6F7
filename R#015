import React, { useState } from "react";

export default function TravelLog() {
  const [activities, setActivities] = useState([]);
  const [inputData, setInputData] = useState({
    destination: "",
    dates: "",
    groupSize: 1,
    travelPreferences: ""
  });

  function handleActivitiesChange(e) {
    const selectedActivities = Array.from(
      e.target.selectedOptions,
      (option) => option.value
    );
    setActivities(selectedActivities);
  }

  function handleInputDataChange(e) {
    const name = e.target.name;
    const value = e.target.value;

    setInputData({ ...inputData, [name]: value });
  }

  function handleSubmit(e) {
    e.preventDefault();

    setInputData({
      destination: "",
      dates: "",
      groupSize: 1,
      travelPreferences: ""
    });
    setActivities([]);
  }

  return (
    <div>
      <h2>Adventure Travel Booking</h2>
      <form onSubmit={handleSubmit}>
        <label htmlFor="destination">Destination:</label>
        <input
          type="text"
          id="destination"
          name="destination"
          value={inputData.destination}
          onChange={handleInputDataChange}
        />

        <label htmlFor="activities">Activities:</label>
        <select
          id="activities"
          name="activities"
          value={activities}
          onChange={handleActivitiesChange}
        >
          <option value="">--Select an activity--</option>
          <option>Biking</option>
          <option>Safari</option>
        </select>

        <label htmlFor="dates">Date:</label>
        <input
          type="date"
          id="dates"
          name="dates"
          value={inputData.dates}
          onChange={handleInputDataChange}
        />

        <label htmlFor="groupSize">Group Size</label>
        <input
          type="number"
          id="groupSize"
          name="groupSize"
          min="1"
          value={inputData.groupSize}
          onChange={handleInputDataChange}
        />

        <label htmlFor="travelPreferences">Travel Preferences</label>
        <textarea
          id="travelPreferences"
          name="travelPreferences"
          value={inputData.travelPreferences}
          onChange={handleInputDataChange}
          placeholder="Write down your travel preferences."
          rows={3}
          cols={20}
          style={{
            resize: "vertical",
            minHeight: "25px",
            maxHeight: "250px"
          }}
        ></textarea>

        <input
          type="submit"
          id="submit"
          name="submit"
          value="Book Adventure"
        />
      </form>
    </div>
  );
}
